<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_marginRight="50dp"
    android:gravity="left"
    android:orientation="vertical">

    <kz.q19.kenes.widget.ui.components.KenesChatMessageTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kenes_bg_rounded_chat_incoming_message"
        android:textColor="@color/kenes_dark_charcoal"
        tools:text="Incoming message" />

    <kz.q19.kenes.widget.ui.components.KenesChatMessageTimeView
        android:id="@id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:01" />

</LinearLayout>