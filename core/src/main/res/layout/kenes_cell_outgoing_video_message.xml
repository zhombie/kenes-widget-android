<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="50dp"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/kenes_bg_rounded_chat_outgoing_message"
            android:gravity="right"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:minHeight="120dp"
                    android:maxHeight="175dp"
                    app:shapeAppearance="@style/Kenes.Widget.ShapeAppearance.Rounded.All.15dp"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/durationView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="9dp"
                    android:background="@drawable/kenes_bg_rounded_alpha_black"
                    android:includeFontPadding="false"
                    android:paddingLeft="6dp"
                    android:paddingTop="2.5dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2.5dp"
                    android:textColor="@color/kenes_white"
                    android:textSize="10sp"
                    tools:text="04:20" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/playButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/kenes_black_with_opacity_80"
                    android:src="@drawable/kenes_ic_play"
                    android:tint="@color/kenes_white"
                    app:contentPadding="15dp"
                    app:shapeAppearance="@style/Kenes.Widget.ShapeAppearance.Circle" />

            </FrameLayout>

            <kz.q19.kenes.widget.ui.components.KenesChatMessageTextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/kenes_white"
                tools:text="Outgoing message" />

        </LinearLayout>

        <kz.q19.kenes.widget.ui.components.KenesChatMessageTimeView
            android:id="@id/timeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:01" />

    </LinearLayout>

</FrameLayout>