<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/chatView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    <kz.q19.kenes.widget.ui.components.KenesFloatingLayout
        android:id="@+id/floatingLayout"
        android:layout_width="125dp"
        android:layout_height="180dp"
        android:layout_gravity="center_vertical|right"
        android:layout_margin="15dp"
        android:alpha="1.0"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        tools:visibility="visible">

        <kz.q19.webrtc.core.ui.SurfaceViewRenderer
            android:id="@+id/floatingSurfaceViewRenderer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hideButton"
            style="@style/Kenes.Widget.Button.Unelevated.OnlyIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:padding="5dp"
            app:icon="@drawable/kenes_ic_cancel"
            app:iconSize="20dp"
            app:iconTint="@color/kenes_white" />

    </kz.q19.kenes.widget.ui.components.KenesFloatingLayout>

    <include
        android:id="@+id/videoView"
        layout="@layout/kenes_view_video_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/bottom_sheet_behavior"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>