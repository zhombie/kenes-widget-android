<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:attr/colorControlHighlight">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/kenes_black" />
            <corners android:radius="@dimen/kenes_rounded_border_radius" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/kenes_very_light_mostly_white_gray" />
            <corners android:radius="@dimen/kenes_rounded_border_radius" />
            <stroke
                android:width="0.75dp"
                android:color="@color/kenes_very_light_grayish_blue" />
        </shape>
    </item>

</ripple>