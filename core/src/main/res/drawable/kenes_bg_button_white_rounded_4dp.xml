<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/kenes_light_grayish_blue" android:width="1dp" />

            <solid android:color="@color/kenes_white" />

            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/kenes_light_blue" android:width="1dp" />

            <solid android:color="@color/kenes_pale_blue" />

            <corners android:radius="4dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/kenes_light_grayish_blue" android:width="1dp" />

            <solid android:color="@color/kenes_white" />

            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>