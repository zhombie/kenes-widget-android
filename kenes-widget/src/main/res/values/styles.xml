<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--title color-->
<!--        <item name="android:textColorPrimary">@color/kenes_black</item>-->

        <!--list item color-->
<!--        <item name="textColorAlertDialogListItem">@color/kenes_black</item>-->

        <!--dialog background-->
<!--        <item name="popupMenuBackground">@drawable/kenes_bg_dialog</item>-->
<!--        <item name="android:windowBackground">@drawable/kenes_bg_dialog</item>-->

        <item name="dialogCornerRadius">8dp</item>

        <!--item RadioButton or CheckBox color-->
        <item name="colorControlNormal">@color/kenes_dark_grayish_pink</item>
        <item name="colorControlActivated">@color/kenes_light_blue</item>

        <!--positive button style-->
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>

        <!--negative button style-->
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>

        <!--paddings-->
        <item name="listPreferredItemPaddingLeft">@dimen/kenes_dialog_spacing</item>
        <item name="listPreferredItemPaddingRight">@dimen/kenes_dialog_spacing</item>

        <!--size-->
<!--        <item name="windowMinWidthMinor">80%</item>-->
<!--        <item name="windowMinWidthMajor">80%</item>-->
<!--        <item name="android:windowMinWidthMajor">80%</item>-->
<!--        <item name="android:windowMinWidthMinor">80%</item>-->
    </style>

    <style name="FullscreenDialog" parent="AlertDialogTheme">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullscreenDialog.Animation">
        <item name="android:windowEnterAnimation">@anim/in</item>
        <item name="android:windowExitAnimation">@anim/out</item>
    </style>

    <style name="Alert.Button.Positive" parent="TextAppearance.AppCompat.Widget.Button">
<!--        <item name="android:minWidth">0dp</item>-->
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/kenes_light_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/kenes_transparent</item>
<!--        <item name="rippleColor">@color/kenes_gray</item>-->

        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Alert.Button.Negative" parent="TextAppearance.AppCompat.Widget.Button">
<!--        <item name="android:minWidth">0dp</item>-->
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/kenes_light_blue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="backgroundTint">@color/kenes_transparent</item>
<!--        <item name="rippleColor">@color/kenes_gray</item>-->

        <item name="background">@null</item>
        <item name="android:background">@null</item>
    </style>

    <style name="BorderlessButton" parent="Widget.AppCompat.Button.Borderless" />

    <style name="RoundedButton" parent="BorderlessButton" />

    <style name="SmallRoundedButton" parent="RoundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/kenes_bg_button_light_blue_rounded_15dp</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/kenes_selector_blue_to_light_blue</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NormalRoundedButton" parent="RoundedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/kenes_bg_button_light_blue_rounded_4dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/kenes_selector_blue_to_light_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationButton" parent="BorderlessButton">
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:paddingBottom">7.5dp</item>
        <item name="android:textAlignment">center</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/kenes_dark_gray</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="BoldTitle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/kenes_black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="StandardSubtitle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>