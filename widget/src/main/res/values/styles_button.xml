<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Kenes.Widget.Button.Unelevated" parent="Widget.MaterialComponents.Button.UnelevatedButton" />

    <style name="Kenes.Widget.Button.Borderless" parent="Widget.AppCompat.Button.Borderless" />

    <style name="SmallRoundedButton" parent="Kenes.Widget.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/kenes_bg_button_light_blue_rounded_15dp</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/kenes_selector_blue_to_light_blue</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="NormalRoundedButton" parent="Kenes.Widget.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/kenes_bg_button_light_blue_rounded_4dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingStart">30dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/kenes_selector_blue_to_light_blue</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Kenes.Widget.Button.Unelevated.OnlyIcon" parent="Kenes.Widget.Button.Unelevated">
        <item name="android:backgroundTint">@color/kenes_transparent</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:text">@null</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">@color/kenes_gray</item>
        <item name="shapeAppearance">@style/Kenes.Widget.ShapeAppearance.Circle</item>
    </style>

    <style name="Kenes.Widget.Button.BottomNavigation" parent="Kenes.Widget.Button.Borderless">
        <item name="background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:drawablePadding">7dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:paddingBottom">7.5dp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/kenes_dark_gray</item>
        <item name="android:textSize">9sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>