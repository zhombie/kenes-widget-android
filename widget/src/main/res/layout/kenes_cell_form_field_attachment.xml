<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/labelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/kenes_black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:text="@string/kenes_name" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/selectAttachmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kenes_bg_import_button"
        android:drawableLeft="@drawable/kenes_ic_import"
        android:drawablePadding="15dp"
        android:paddingStart="20dp"
        android:paddingTop="12.5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12.5dp"
        android:text="@string/kenes_select_file"
        android:textAllCaps="false"
        android:textColor="@color/kenes_very_dark_grayish_blue"
        android:textSize="14sp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/attachmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/kenes_bg_attachment"
        android:clickable="true"
        android:drawableLeft="@drawable/kenes_ic_attachment"
        android:drawablePadding="15dp"
        android:focusable="true"
        android:paddingStart="20dp"
        android:paddingTop="12.5dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12.5dp"
        android:text="27cf3cd7c884422585e9440a647966a4.png"
        android:textAllCaps="false"
        android:textColor="@color/kenes_very_dark_gray"
        android:textSize="14sp"
        android:textStyle="normal"
        android:visibility="visible" />

</LinearLayout>