<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="12dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:backgroundTint="@color/kenes_white"
            android:fontFamily="sans-serif"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            android:insetTop="0dp"
            android:letterSpacing="0.01"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingBottom="0dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="0dp"
            android:text="@string/kenes_back"
            android:textAllCaps="false"
            android:textColor="@color/kenes_dark_charcoal"
            android:textSize="10sp"
            android:textStyle="normal"
            app:icon="@drawable/ic_arrow_left"
            app:iconGravity="textStart"
            app:iconPadding="6dp"
            app:iconSize="10dp"
            app:iconTint="#888888"
            app:shapeAppearance="@style/Kenes.Widget.ShapeAppearance.Circle" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/menuButton"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="36dp"
            android:layout_height="34dp"
            android:layout_gravity="right"
            android:backgroundTint="@color/kenes_white"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:text="@null"
            app:icon="@drawable/ic_menu"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="12dp"
            app:iconTint="@color/kenes_dark_charcoal"
            app:shapeAppearance="@style/Kenes.Widget.ShapeAppearance.Circle" />

    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ripple_rounded_white"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="12dp"
        android:paddingBottom="5dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/cell_response_group_child" />

</LinearLayout>