<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/kenes_title_bottom_offset"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="8dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/kenes_horizontal_spacing"
        android:paddingTop="@dimen/kenes_title_padding"
        android:paddingEnd="@dimen/kenes_horizontal_spacing"
        android:paddingBottom="@dimen/kenes_title_padding"
        android:textAppearance="@style/BoldTitle"
        app:drawableStartCompat="@drawable/kenes_ic_arrow_left_black"
        tools:text="Бизнесу" />

    <q19.kenes.widget.ui.components.base.HtmlTextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/kenes_horizontal_spacing"
        android:layout_marginEnd="@dimen/kenes_horizontal_spacing"
        android:background="@drawable/kenes_bg_incoming_message"
        android:clickable="true"
        android:focusable="true"
        android:lineSpacingExtra="2.5sp"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp"
        android:textColor="@color/kenes_very_dark_gray"
        android:textSize="14sp"
        tools:text="Message" />

    <TextView
        android:id="@+id/attachmentView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kenes_horizontal_spacing"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/kenes_horizontal_spacing"
        android:background="@drawable/kenes_bg_button_light_blue_rounded_4dp"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:padding="10dp"
        android:textColor="@color/kenes_selector_blue_to_light_blue"
        android:textSize="13sp"
        android:visibility="gone"
        tools:text="тарифы_день_в_день.pdf"
        tools:visibility="visible"
        app:drawableStartCompat="@drawable/kenes_selector_file" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="@dimen/kenes_horizontal_spacing"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="@dimen/kenes_horizontal_spacing"
        android:textColor="@color/kenes_dark_grayish_blue"
        android:textSize="11sp"
        tools:text="04:20" />

    <include
        android:id="@+id/backButtonView"
        layout="@layout/kenes_cell_horizontal_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/kenes_horizontal_spacing"
        android:layout_marginTop="@dimen/kenes_footer_vertical_offset"
        android:layout_marginEnd="@dimen/kenes_horizontal_spacing" />

</LinearLayout>