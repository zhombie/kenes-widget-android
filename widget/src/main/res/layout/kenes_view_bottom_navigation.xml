<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavigationView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/kenes_white"
    android:gravity="bottom|center_horizontal"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/homeButton"
        style="@style/Kenes.Widget.Button.BottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/kenes_ic_home_gray"
        android:ellipsize="end"
        android:text="@string/kenes_home" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/servicesButton"
        style="@style/Kenes.Widget.Button.BottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/kenes_ic_service_gray"
        android:ellipsize="end"
        android:text="@string/kenes_services" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/callButton"
        style="@style/Kenes.Widget.Button.BottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/kenes_ic_headphones_gray"
        android:ellipsize="end"
        android:text="@string/kenes_calls" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/infoButton"
        style="@style/Kenes.Widget.Button.BottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/kenes_ic_list_gray"
        android:ellipsize="end"
        android:text="@string/kenes_contacts" />

</LinearLayout>