<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end"
        app:duration="200"
        app:motionInterpolator="linear"
        app:staggered="0.1">
        <KeyFrameSet />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/videoView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/floatingLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@id/videoView"
            app:layout_constraintLeft_toLeftOf="@id/videoView"
            app:layout_constraintRight_toRightOf="@id/videoView"
            app:layout_constraintTop_toTopOf="@id/videoView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/videoView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@id/floatingLayout"
            app:layout_constraintLeft_toLeftOf="@id/floatingLayout"
            app:layout_constraintRight_toRightOf="@id/floatingLayout"
            app:layout_constraintTop_toTopOf="@id/floatingLayout" />

        <Constraint
            android:id="@+id/floatingLayout"
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.9" />
    </ConstraintSet>

</MotionScene>